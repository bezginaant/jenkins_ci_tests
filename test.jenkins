pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'Building...'
                echo 'Build completed'
            }
        }
        stage('testing') {
            steps {
                sh 'pwd'
                sh "python3 --version"
                sh "ls"
                sh "git clone https://github.com/bezginaant/jenkins_ci_tests.git"
                sh "cd ./jenkins_ci_tests/pytest_homework && pip install -r requirements.txt && pytest -q pytest_project/pytest_homework/checker.py"
            }
        }
    }
}
